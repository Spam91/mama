=render "layouts/tab"
=form_for :child, :url => {:action => :create} do |b|
  .center
    =b.label "Номер історії новонародженого"
    =b.number_field :history_id
    %br
    =b.label "Дата народження"
    =b.datetime_select :born, prompt: true
    //=b.text_field :born, "data-behaviour" => "datepicker"
    %br
    =b.label "Фамілія"
    =b.text_field :surname
    %br
    =b.label "Імя"
    =b.text_field :fname
    %br
    =b.label "По-батькові"
    =b.text_field :sname
    %br
    =b.submit "Save"