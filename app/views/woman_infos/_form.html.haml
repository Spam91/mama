=render "layouts/tab"
= render "women/backwoman"
=form_for [@woman,@woman_info] do |t|
  .center
    =t.label "Вік"
    =t.number_field :age
    %br
    =t.label "Національність"
    =t.text_field :national
    %br
    =t.label "Поступила"
    =t.date_field :input
    %br
    =t.label "Виписана"
    =t.date_field :output, prompt: true
    %br
    =t.label "Ліжко днів"
    =t.number_field :bed
    %br
    =t.label "Палата"
    =t.text_field :palata
    %br
    =t.label "Ким направлена"
    =t.text_field :directed
    %br
    =t.label "Місце проживання"
    =t.text_field :home_adress
    %br
    =t.label "Адреса"
    =t.text_field :misce_progiv
    %br
    =t.label "Телефон мобільний (+38-067-1234567)"
    =t.telephone_field :tel, pattern: "+[0-9]{2}-[0-9]{3}-[0-9]{7}"
    %br
    =t.label "Сімейний стан"
    =t.text_field :sim_stan
    %br
    =t.label "Робота"
    =t.text_field :job
    %br
    =t.label "Інвалід"
    =t.radio_button :invalidity, true
    %span Так
    =t.radio_button :invalidity, false
    %span Ні
    %br
    =t.label "Категорія інвалід"
    =t.number_field :categor
    %br
    =t.label "Cерія посвідчення"
    =t.text_field :seria
    %br
    =t.label "Номер посвідчення"
    =t.text_field :number_pos
    %br
    =t.label "Відвідування акушерку"
    =t.radio_button :vid_akysher, true
    %span Так
    =t.radio_button :vid_akysher, false
    %span Ні
    %br
    =t.label "Скільки разів"
    =t.number_field :raziv
    %br
    =t.label "Найменування консультацій"
    =t.text_field :name_cons
    %br
    =t.submit "Save"